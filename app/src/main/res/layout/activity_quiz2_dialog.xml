<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="300dp">

    <TextView
        android:id="@+id/activity_quiz2_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Quiz3"
        android:gravity="center"
        android:background="@android:color/white"
        android:textColor="@android:color/black"
        android:textSize="30sp"
    />

    <RadioGroup
        android:id="@+id/activity_quiz2_radio"
        android:layout_below="@+id/activity_quiz2_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RadioButton
            android:text="Yes"
            android:id="@+id/activity_quiz2_yes"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <RadioButton
            android:text="No"
            android:id="@+id/activity_quiz2_no"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
        <RadioButton
            android:text="Exit"
            android:id="@+id/activity_quiz2_exit"
            android:layout_width="match_parent"
            android:layout_height="60dp" />
    </RadioGroup>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <Button
            android:id="@+id/activity_quiz2_ok_bt"
            android:layout_alignParentRight="true"
            android:layout_width="150sp"
            android:text="Ok"
            android:layout_height="60dp" />
        <Button
            android:id="@+id/activity_quiz2_cancelbt"
            android:layout_alignParentLeft="true"
            android:layout_width="150sp"
            android:text="Cancel"
            android:layout_height="60dp" />
    </RelativeLayout>

</RelativeLayout>
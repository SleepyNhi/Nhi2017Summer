<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sleepynhi.nhi2017summer.AnimatorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/animator_bottom">

        <Button
            android:id="@+id/animator_bt_start"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Start"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/animator_tv"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="23sp"
            android:text="Hello, Android"
            android:background="@android:color/holo_blue_light"

            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/animator_bt_start"
            android:layout_alignParentTop="true" />

        <Button
            android:id="@+id/animator_bt_stop"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Stop"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>

    <GridLayout
        android:id="@+id/animator_bottom"
        android:orientation="horizontal"
        android:columnCount="3"
        android:rowCount="2"
        android:useDefaultMargins="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="140dp">


        <Button
            android:id="@+id/animator_trans"
            android:padding="10dp"
            android:layout_width="110dp"
            android:text="Trans"
            />
        <Button
            android:id="@+id/animator_scale"
            android:padding="10dp"
            android:layout_width="110dp"
            android:text="Scale"
            />
        <Button
            android:id="@+id/animator_color"
            android:padding="10dp"
            android:layout_width="110dp"
            android:text="Color"

            />
        <Button
            android:id="@+id/animator_char"
            android:padding="10dp"
            android:layout_width="110dp"
            android:text="char"
            />
        <Button
            android:id="@+id/animator_alpha"
            android:padding="10dp"
            android:layout_width="110dp"
            android:text="Alpha"
            />
        <Button
            android:id="@+id/animator_rotation"
            android:padding="10dp"
            android:layout_width="110dp"
            android:text="Rotation"
            />

    </GridLayout>



</RelativeLayout>

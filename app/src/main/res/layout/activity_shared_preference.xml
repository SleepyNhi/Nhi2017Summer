<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.sleepynhi.nhi2017summer.SharedPreferenceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Email:"
            android:padding="15dp"
            android:gravity="center"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/activity_sharedpreference_em"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:hint="Please inpute your email"
            android:textSize="15dp"
            android:inputType="textEmailAddress"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >

        <TextView

            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Password:"
            android:padding="15dp"
            android:gravity="center"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/activity_sharedpreference_pw"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:hint="Please input your password"
            android:textSize="15dp"
            android:inputType="textWebPassword"/>
    </LinearLayout>

    <Button
        android:id="@+id/activity_sharedpreference_login"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="Login"
        android:background="@null"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/activity_sharedpreference_clear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Clear Cache"
        android:layout_marginTop="280dp"
        android:textSize="30sp" />
</LinearLayout>
